<%= simple_form_for(@constructeur) do |f| %>
  <%= f.error_notification %>
  <div class="row">
    <div class="form-group col-lg-5">
      <p>
    	<%= f.input :name, label:'Nom' %>
      </p>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, value:'Valider', class:'btn btn-success' %>
    <%= link_to 'Retour', constructeurs_path, class:'btn btn-primary' %>
  </div>
<% end %>
