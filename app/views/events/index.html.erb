<p id="notice"><%= notice %></p>

<h1>Evènements à venir</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Date de début</th>
      <th>Date de fin</th>
      <th>Lieu</th>
      <th>Tarif</th>
      <th>Nombre de participants</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= date_format(event.startDate) %></td>
        <td><%= date_format(event.endDate) %></td>
        <td><%= event.place %></td>
        <td><%= event.rate %></td>
        <td><%= event.utilisateurs.count %></td>
        <td><%= link_to 'Afficher', event, class: 'btn btn-info' %></td>
        <td><%= link_to 'Modifier', edit_event_path(event), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Supprimer', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Créer un évènement', new_event_path, class: 'btn btn-success' %>
