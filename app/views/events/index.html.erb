<div class="col-md-8 col-md-offset-2">
  <section class="second_section">
    <h1>Liste des évènements</h1>
    <% if @events.any? %>
      <table class="table">
        <thead>
          <tr>
            <th>Nom</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Lieu</th>
            <th>Tarif</th>
            <th>Nombre de participants</th>
            <th>Statut</th>
            <th>Image</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @events.each do |event| %>
            <tr>
              <td><%= event.name %></td>
              <td><%= date_format(event.startDate) %></td>
              <td><%= date_format(event.endDate) %></td>
              <td><%= event.place %></td>
              <td><%= event.rate %></td>
              <td><%= event.utilisateurs.count %></td>
              <td><%= event.status %></td>
              <td><a class="btn btn-secondary" data-toggle="modal" data-target="#picture-<%= event.id %>">Aperçu</a></td>
              <% if utilisateur_signed_in? && current_utilisateur.has_role?(:admin) %>
                <td><%= link_to 'Afficher', event, class: 'btn btn-info' %></td>
                <td><%= link_to 'Modifier', edit_event_path(event), class: 'btn btn-warning' %></td>
                <td><%= button_to 'Supprimer', event, method: :delete, data: { confirm: 'Êtes-vous certain ?' }, class: 'btn btn-danger' %></td>
              <% end %>
            </tr>   
            <%= render partial: 'modal', locals:{event: event} %>
          <% end %>
        </tbody>
      </table>
    <% else %>
      Pas d'évènement enregistré 
    <% end %>
    <br>
    <% if utilisateur_signed_in? && current_utilisateur.has_role?(:admin) %>
      <%= link_to 'Créer un évènement', new_event_path, class: 'btn btn-success' %>
    <% end %>
  </section>
</div>
