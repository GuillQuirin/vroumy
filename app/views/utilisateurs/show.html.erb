<section class="second_section" style="padding-bottom:20px;">
  <div class="container">
    <div class="row">
      <div class="col-sm-3 col-sm-offset-2">
        <%= render partial: 'pictures', locals:{utilisateur: @utilisateur} %>
      </div>
      <div class="col-sm-6">
      <% if current_utilisateur.id == @utilisateur.id %>
        <h1>Mon compte</h1>
      <% else %>
        <h1>Informations sur le participant</h1>
      <% end %>

        <p>
          <strong>Pseudo : </strong>
          <%= @utilisateur.pseudo %>
        </p>

        <p>
          <strong>Prénom : </strong>
          <%= @utilisateur.firstName %>
        </p>

        <p>
          <strong>Nom : </strong>
          <%= @utilisateur.lastName %>
        </p>

        <p>
          <strong>Adresse : </strong>
          <%= @utilisateur.numAddress %> <%= @utilisateur.address %>
          <%= @utilisateur.city %>
        </p>

        <p>
          <strong>Téléphone : </strong>
          <%= @utilisateur.phone %>
        </p>

        <p>
          <strong>Email : </strong>
          <%= @utilisateur.email %>
        </p>
        <% if current_utilisateur.id == @utilisateur.id %>
          <%= link_to 'Modifier mes informations', edit_utilisateur_path(@utilisateur), class:'btn btn-warning' %>
        <% end %>
      </div>
    </div>
  </div>
</section>
<section id="vehicule" class="bg-light-gray">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
      <% if current_utilisateur.id == @utilisateur.id %>
        <h2 class="section-heading" id="my_cars">Mes véhicules</h2>
        <% else %>
<h2 class="section-heading" id="my_cars">Ses véhicules</h2>
        <% end %>
      </div>
    </div>
    <div class="row">
      <% @utilisateur.voitures.each do |voiture| %>
      <div class="col-md-4 col-sm-6 portfolio-item">
        <%= link_to voiture_url(voiture.id), class:"portfolio-link" do %>
          <div class="portfolio-hover">
            <div class="portfolio-hover-content">
              <i class="fa fa-plus fa-2x"> <span>d'infos</span></i>
            </div>
          </div>
          <% if voiture.avatar.exists? %>
            <img src="<%= voiture.avatar.url(:medium) %>" class="img-responsive" alt="">
          <% else %>
            <i class="fa fa-car" id="fa-14x" style="padding-left: 19%; padding-right:19%"><span></span></i>
          <% end %>
        <% end %>
        <div class="portfolio-caption">
          <h4><%= voiture.name %></h4>
          <p class="text-muted"><%= voiture.modele.name %></p>
          <p class="text-muted">Mise en circulation : <%= short_date_format(voiture.release) %></p>
        </div>
      </div>
      <% end %>
      <% if current_utilisateur.id == @utilisateur.id %>
      <div class="col-md-4 col-sm-6 portfolio-item">
        <%= link_to new_voiture_url(), class:"portfolio-link" do %>
        <div class="portfolio-hover">
          <div class="portfolio-hover-content">
            <i class="fa fa-plus-circle" id="fa-11x"><span></span></i>
          </div>
        </div>
        <i class="fa fa-plus-circle" id="fa-16x" style="padding-left: 25%"><span></span></i>
        <% end %>
        <div class="portfolio-caption">
          <h4>Ajouter un véhicule à ma collection</h4>
          <p class="text-muted"></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</section>
