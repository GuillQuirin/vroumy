<p id="notice"><%= notice %></p>

<h1>Utilisateurs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Prénom</th>
      <th>Nom</th>
      <th>Email</th>
      <th>Adresse</th>
      <th>Téléphone</th>
      <th>Statut</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @utilisateurs.each do |utilisateur| %>
      <tr>
        <td><%= utilisateur.firstName %></td>
        <td><%= utilisateur.lastName %></td>
        <td><%= utilisateur.email %></td>
        <td><%= utilisateur.numAddress %>
        <%= utilisateur.address %>
        <%= utilisateur.city %></td>
        <td><%= utilisateur.phone %></td>
        <td><%= utilisateur.isActive %></td>
        <td><%= link_to 'Afficher', utilisateur, class:'btn btn-info' %></td>
        <td><%= link_to 'Modifier', edit_utilisateur_path(utilisateur), class:'btn btn-warning' %></td>
        <td><%= link_to 'Supprimer', utilisateur, method: :delete, data: { confirm: 'Etes-vous sur ?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Créer un utilisateur', new_utilisateur_path, class:'btn btn-success' %>
